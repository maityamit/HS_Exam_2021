<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dida"
    android:layout_height="match_parent"
    tools:context=".BoardsResultActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WBCHSE Board Results"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="#283593"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"/>



    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Upcoming Results"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:background="@android:color/white"
        android:textColor="#C62828"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/next_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:text="Results:- "/>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                app:cardCornerRadius="12dp"
                android:padding="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:padding="2dp"
                        android:src="@drawable/kohoz" />
                    <TextView
                        android:id="@+id/next_quiz_link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:padding="10dp"
                        android:autoLink="web"
                        android:textColorLink="@android:color/black"
                        android:layout_marginStart="30dp"
                        android:text="Notification 1"
                        android:textColor="#2E7D32" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Toppers"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:background="@android:color/white"
                android:textColor="#C62828"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_gravity="center_horizontal"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="15dp"
                android:padding="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:padding="2dp"
                        android:src="@drawable/kohoz" />
                    <TextView
                        android:id="@+id/quiz_winners"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:autoLink="web"
                        android:textColorLink="@android:color/black"
                        android:layout_marginStart="30dp"
                        android:text="Notification 1"
                        android:textColor="#1565C0" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>



    </ScrollView>





</LinearLayout>
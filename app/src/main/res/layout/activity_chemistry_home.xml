<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/dida"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="hsexamduniabyamit2022.example.hsexam2022.ChemistryHomeActivity">
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="#2E7D32"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@android:color/white"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:textSize="22sp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:text="Class 12 Chemistry"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:elevation="15dp"
        app:cardElevation="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="20dp"
        android:layout_height="120dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/class12chemsitry_suggestions"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:weightSum="4">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:src="@drawable/important"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                android:layout_weight="3"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical|start"
                        android:textSize="22sp"
                        android:textColor="#EF6C00"
                        android:textStyle="bold"
                        android:text="Important Qn"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:text="Important Suggestion with Ans."/>
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
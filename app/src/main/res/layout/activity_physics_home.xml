<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/dida"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".PhysicsHomeActivity">




    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="#2E7D32"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@android:color/white"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:textSize="22sp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:text="Class 12 Physics"/>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:padding="5dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                android:layout_marginTop="15dp"
                app:cardMaxElevation="35dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_height="120dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/class12learning"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:weightSum="4">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:src="@drawable/lering"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp"
                        android:layout_weight="3"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center_vertical"
                            android:textSize="22sp"
                            android:textColor="#0277BD"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:text="Learing"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:textColor="@android:color/black"
                            android:layout_weight="1"
                            android:textSize="15dp"
                            android:layout_gravity="center_vertical"
                            android:text="Learn from simple way"/>
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:padding="5dp"
                android:elevation="15dp"
                android:layout_marginStart="15dp"
                app:cardElevation="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="20dp"
                android:layout_height="120dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/class12importantqn"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:weightSum="4">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:src="@drawable/important"
                        android:layout_gravity="center"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp"
                        android:layout_weight="3"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:textSize="22sp"
                            android:textColor="#EF6C00"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:text="Imp. Question"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textColor="@android:color/black"
                            android:text="Important Qn : MCQ and SAQ"/>
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_marginStart="15dp"
                app:cardElevation="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="20dp"
                android:elevation="15dp"
                android:layout_height="120dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/class12solutions"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:weightSum="4">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="0dp"
                        android:src="@drawable/solutions"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp"
                        android:layout_weight="3"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:textSize="22sp"
                            android:textColor="#283593"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:text="Solutions"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textColor="@android:color/black"
                            android:text="Solution of Chaya Prakashani Book"/>
                    </LinearLayout>

                </LinearLayout>




            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:elevation="15dp"
                app:cardElevation="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="20dp"
                android:layout_height="120dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/class12physics_test_paper"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:weightSum="4">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:src="@drawable/dpp"
                        android:layout_gravity="center"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp"
                        android:layout_weight="3"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical|start"
                                android:textSize="22sp"
                                android:textColor="#F9A825"
                                android:textStyle="bold"
                                android:text="Test Paper"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textColor="@android:color/black"
                            android:text="Model Paper with Solution"/>
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                app:cardElevation="20dp"
                android:elevation="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="20dp"
                android:layout_height="120dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/class12practical"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:weightSum="4">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:src="@drawable/practical_"
                        android:layout_gravity="center"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp"
                        android:layout_weight="3"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical|start"
                                android:textSize="22sp"
                                android:textColor="#6C6B6A"
                                android:textStyle="bold"
                                android:text="Practical"/>



                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textColor="@android:color/black"
                            android:text="Class 12 Board Practical"/>
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".EntranceExamActivity">


    <TextView
        android:id="@+id/dgscgdsgvgb"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Entrance Exam"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"
        android:padding="8dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>

    <com.leo.simplearcloader.SimpleArcLoader
        android:visibility="visible"
        android:id="@+id/loader2"
        android:layout_centerInParent="true"
        android:layout_width="70dp"
        app:arc_style="complete_arc"
        android:layout_height="70dp">
    </com.leo.simplearcloader.SimpleArcLoader>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_below="@id/dgscgdsgvgb"
        android:id="@+id/RecycleAlltheEntrance"
        android:layout_height="wrap_content">


    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>